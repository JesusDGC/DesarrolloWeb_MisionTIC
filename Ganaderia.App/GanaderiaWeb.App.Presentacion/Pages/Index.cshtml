@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
     <div class="text-center">
    <form style="max-width: 480px;margin: auto;" class="form-signin" action="/login" method="POST">
      <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
      <img src="~/assets/logoSaludGan.png" alt="logo" style="max-height: 150px; max-width: 150 px;">
        <h1 class="h3 mb-3 font-weight-normal">Inicio de Sesi&oacute;n</h1>
        <label for="usuario" class="sr-only">Usuario</label>
        <input type="email" id="usuario" name="usuario" class="form-control" placeholder="Usuario" minlength="6"
          maxlength="20" required autofocus>
        <br />
        <label for="password" class="sr-only">Contraseña</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Password" minlength="6"
          required>

        <div class="mt-3">
          <button class="btn btn-lg btn-primary btn-block" style="background-color: #FB6A3B" type="submit">Iniciar
            Sesi&oacute;n</button>
        </div>
        <div class="mt-3">
          <button class="btn btn-lg btn-primary btn-block" style="background-color: #3F5959"
            type="submit">Registrarse</button>
        </div>

    </form>
  </div>

  </div>
